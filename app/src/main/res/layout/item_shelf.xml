<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="150dp"
                android:id="@+id/item_shelf"
                android:padding="5dp"
                android:background="@drawable/bg_white_press"
                android:clickable="true"
>
    <ImageView
            android:id="@+id/item_shelf_img"
            android:src="@drawable/book_default"
            android:layout_width="120dp"
            android:layout_height="150dp"
            />
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/item_shelf_img"
            android:padding="@dimen/dp_10"

            >
        <TextView
                android:id="@+id/item_shelf_txt"
                android:text="至尊战神   君落花"
                style="@style/text_single"
                />
        <TextView
                android:id="@+id/item_shelf_section"
                android:text="最新章节：第3454章 折磨"
                style="@style/text_single"
                android:layout_below="@id/item_shelf_txt"
                android:layout_marginTop="@dimen/dp_10"
                />
        <TextView
                android:id="@+id/item_shelf_update"
                android:text="最后阅读：2017-06-05"
                style="@style/text_single"
                android:layout_below="@id/item_shelf_section"
                android:layout_marginTop="@dimen/dp_10"
                />
        <TextView
                android:id="@+id/item_shelf_progress"
                android:text="67/3454"
                style="@style/text_single"
                android:layout_below="@id/item_shelf_update"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_10"
                />
        <TextView
                android:id="@+id/item_shelf_end"
                android:text="已完结"
                style="@style/text_single"
                android:layout_below="@id/item_shelf_update"
                android:layout_marginTop="@dimen/dp_10"
                />
    </RelativeLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_press"
            android:layout_alignParentBottom="true"
            />
</RelativeLayout>
