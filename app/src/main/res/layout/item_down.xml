<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/bg_white_press"
                android:id="@+id/item_down"
        >
    <ImageView
            android:id="@+id/item_down_img"
            android:src="@drawable/download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            />
    <TextView
            android:id="@+id/item_down_name"
            android:text="@string/system"
            style="@style/text_single"
            android:padding="8dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/item_down_img"
            android:layout_marginLeft="@dimen/dp_10"
            />
    <TextView
            android:id="@+id/item_down_type"
            android:text="@string/pause"
            style="@style/text_single"
            android:padding="8dp"
            android:layout_width="120dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/item_down_name"
            android:layout_marginLeft="@dimen/dp_10"
            />
    <TextView
            android:id="@+id/item_down_progress"
            android:text="@string/system"
            style="@style/text_single"
            android:padding="8dp"
            android:layout_toLeftOf="@id/item_down_img"
            android:layout_below="@id/item_down_name"
            android:layout_toRightOf="@id/item_down_type"
            android:gravity="center"
            />
    <ProgressBar
            android:id="@+id/item_down_seek"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@id/item_down_type"
            android:layout_toLeftOf="@id/item_down_img"
            android:layout_marginBottom="@dimen/dp_10"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/bg_down_progress"
            android:layout_marginLeft="@dimen/dp_10"
            />
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_press"
            android:layout_alignParentBottom="true"
            />
</RelativeLayout>
